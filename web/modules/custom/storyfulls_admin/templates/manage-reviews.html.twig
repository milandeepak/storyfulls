<div class="manage-page">
  <h1 class="page-title">Manage Reviews</h1>

  <div class="data-table">
    <table>
      <thead>
        <tr>
          <th>Sl No</th>
          <th>Subject</th>
          <th>Author</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {% if reviews|length > 0 %}
          {% for review in reviews %}
            <tr>
              <td>{{ review.sl_no }}</td>
              <td>{{ review.subject }}</td>
              <td>{{ review.author }}</td>
              <td><a href="/comment/{{ review.cid }}/edit" class="action-link edit-link">edit</a></td>
              <td><a href="/comment/{{ review.cid }}/delete" class="action-link delete-link" onclick="return confirm('Are you sure you want to delete this review?');">delete</a></td>
            </tr>
          {% endfor %}
        {% else %}
          <tr>
            <td colspan="5" class="no-results">No reviews found.</td>
          </tr>
        {% endif %}
      </tbody>
    </table>
  </div>
</div>
