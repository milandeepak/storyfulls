<div class="manage-page">
  <h1 class="page-title">Manage Users</h1>

  <div class="filter-section">
    <form method="get" action="/admin/dashboard/manage-users" class="filter-form">
      <div class="filter-group">
        <label for="name">Name or Email</label>
        <input type="text" name="name" id="name" value="{{ current_name }}" class="form-input" />
      </div>

      <button type="submit" class="btn btn-apply">Apply</button>
    </form>
  </div>

  <div class="data-table">
    <table>
      <thead>
        <tr>
          <th>Sl No</th>
          <th>Name</th>
          <th>Email</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {% if users|length > 0 %}
          {% for user in users %}
            <tr>
              <td>{{ user.sl_no }}</td>
              <td>{{ user.name }}</td>
              <td>{{ user.email }}</td>
              <td><a href="/user/{{ user.uid }}/edit" class="action-link edit-link">edit</a></td>
              <td>
                {% if user.uid != 1 %}
                  <a href="/admin/dashboard/delete-user/{{ user.uid }}" class="action-link delete-link" onclick="return confirm('Are you sure you want to delete this user?');">delete</a>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        {% else %}
          <tr>
            <td colspan="5" class="no-results">No users found.</td>
          </tr>
        {% endif %}
      </tbody>
    </table>
  </div>
</div>
