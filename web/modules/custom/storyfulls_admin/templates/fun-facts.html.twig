<div class="manage-page">
  <h1 class="page-title">Fun Facts</h1>
  
  <div class="fun-facts-editor">
    <form method="post" action="/admin/dashboard/fun-facts" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" value="{{ title }}" placeholder="Fun Facts">
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        <textarea name="content" id="content" class="form-control" rows="8" placeholder="Enter fun fact content...">{{ content }}</textarea>
        <small class="form-text">You can use HTML for formatting.</small>
      </div>

      <div class="form-group">
        <label for="image">Featured Image</label>
        {% if image %}
          <div class="current-image">
            <img src="{{ image.url }}" alt="Current Image" style="max-width: 200px; height: auto; margin-bottom: 10px; border-radius: 8px;">
            <input type="hidden" name="image" value="{{ image.fid }}">
          </div>
        {% endif %}
        <input type="file" name="image_upload" id="image_upload" class="form-control" accept="image/*">
        <small class="form-text">Upload a new image to replace the current one. Recommended size: 300x300px or larger.</small>
      </div>

      <button type="submit" class="btn btn-primary">Update Fun Facts</button>
    </form>
  </div>
</div>

<style>
.fun-facts-editor {
  max-width: 800px;
  margin: 0 auto;
}

.fun-facts-editor .form-group {
  margin-bottom: 1.5rem;
}

.fun-facts-editor label {
  display: block;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: #2C3E50;
}

.fun-facts-editor .form-control {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
  font-family: inherit;
}

.fun-facts-editor textarea.form-control {
  resize: vertical;
}

.fun-facts-editor .form-text {
  display: block;
  margin-top: 0.5rem;
  font-size: 13px;
  color: #666;
}

.fun-facts-editor .current-image {
  margin-bottom: 1rem;
}

.fun-facts-editor .btn-primary {
  background: #4A90E2;
  color: white;
  padding: 0.75rem 2rem;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  cursor: pointer;
  transition: background 0.2s;
}

.fun-facts-editor .btn-primary:hover {
  background: #357ABD;
}
</style>
