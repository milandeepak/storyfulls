<div class="manage-page">
  <h1 class="page-title">Manage Books</h1>
  
  <div class="manage-header">
    <a href="/node/add/book" class="btn btn-create">Create Book</a>
  </div>

  <div class="filter-section">
    <form method="get" action="/admin/dashboard/manage-books" class="filter-form">
      <div class="filter-group">
        <label for="status">Published status <span class="required">*</span></label>
        <select name="status" id="status" class="form-select">
          <option value="">All</option>
          <option value="yes" {% if current_status == 'yes' %}selected{% endif %}>Yes</option>
          <option value="no" {% if current_status == 'no' %}selected{% endif %}>No</option>
        </select>
      </div>

      <div class="filter-group">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="{{ current_name }}" class="form-input" />
      </div>

      <button type="submit" class="btn btn-apply">Apply</button>
    </form>
  </div>

  <div class="data-table">
    <table>
      <thead>
        <tr>
          <th>Sl No</th>
          <th>Name</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {% if books|length > 0 %}
          {% for book in books %}
            <tr>
              <td>{{ book.sl_no }}</td>
              <td>{{ book.name }}</td>
              <td><a href="/node/{{ book.nid }}/edit" class="action-link edit-link">edit</a></td>
              <td><a href="/admin/dashboard/delete-book/{{ book.nid }}" class="action-link delete-link" onclick="return confirm('Are you sure you want to delete this book?');">delete</a></td>
            </tr>
          {% endfor %}
        {% else %}
          <tr>
            <td colspan="4" class="no-results">No books found.</td>
          </tr>
        {% endif %}
      </tbody>
    </table>
  </div>
</div>
