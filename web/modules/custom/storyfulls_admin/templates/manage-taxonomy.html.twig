<div class="manage-page">
  <h1 class="page-title">Manage {{ label }}</h1>
  
  <div class="manage-header">
    <a href="/admin/structure/taxonomy/manage/{{ vocabulary }}/add" class="btn btn-create">Create {{ singular_label }}</a>
  </div>

  <div class="filter-section">
    <form method="get" action="{{ url('<current>') }}" class="filter-form">
      <div class="filter-group">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="{{ current_name }}" class="form-input" />
      </div>

      <button type="submit" class="btn btn-apply">Apply</button>
    </form>
  </div>

  <div class="data-table">
    <table>
      <thead>
        <tr>
          <th>Sl No</th>
          <th>Name</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {% if terms|length > 0 %}
          {% for term in terms %}
            <tr>
              <td>{{ term.sl_no }}</td>
              <td>{{ term.name }}</td>
              <td><a href="/taxonomy/term/{{ term.tid }}/edit" class="action-link edit-link">edit</a></td>
              <td><a href="/admin/dashboard/delete-term/{{ term.tid }}" class="action-link delete-link" onclick="return confirm('Are you sure you want to delete this term?');">delete</a></td>
            </tr>
          {% endfor %}
        {% else %}
          <tr>
            <td colspan="4" class="no-results">No {{ label }} found.</td>
          </tr>
        {% endif %}
      </tbody>
    </table>
  </div>
</div>
