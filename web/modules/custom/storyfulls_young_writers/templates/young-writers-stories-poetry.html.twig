{#
/**
 * @file
 * Template for Stories & Poetry page.
 */
#}

<div class="young-writers-stories-poetry-page">
  {# Banner Section #}
  <div class="young-writers-banner">
    <img src="/themes/custom/storyfulls/images/storypoetrypagebanner.jpg" alt="Stories & Poetry" class="banner-image">
    <div class="banner-overlay">
      <h1 class="banner-title">Stories & Poetry</h1>
      <p class="banner-subtitle">Calling all young wordsmiths! Share your magic with words here</p>
    </div>
  </div>

  {# Share Your Work Button #}
  <div class="share-work-section-centered">
    <a href="/node/add/story_poetry" class="share-work-btn-large">Share your work</a>
  </div>

  {# Writers List #}
  <div class="writers-grid-section">
    {% if writers is empty %}
      <div class="no-content-message">
        <p>No stories or poetry shared yet. Be the first to share your creativity!</p>
      </div>
    {% else %}
      <div class="reviewers-grid">
        {% for writer in writers %}
          <div class="reviewer-card">
            <div class="reviewer-card-inner">
              <a href="/young-writers/stories-poetry/user/{{ writer.id }}" class="reviewer-avatar-link">
                <div class="reviewer-avatar" style="background-image: url('{{ writer.picture }}');"></div>
              </a>
              
              <div class="reviewer-info">
                <h3 class="reviewer-name">{{ writer.name }}</h3>
                <p class="reviewer-age">{{ writer.age }}</p>
                <div class="reviewer-stats">
                  <span class="stat-count">{{ writer.post_count }}</span>
                  <span class="stat-label">Posts</span>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>
