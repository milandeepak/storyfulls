{#
/**
 * @file
 * Edit Profile Page Template
 */
#}
<div class="edit-profile-page">
  {# Main Content #}
  <main class="edit-profile-main">
      <div class="edit-profile-container">
        
        {# Page Header #}
        <div class="edit-profile-header">
          <h1 class="edit-profile-title">Edit Your Profile</h1>
          <p class="edit-profile-subtitle">Update your information and make your profile shine!</p>
        </div>

        {# Edit Form #}
        <form method="post" enctype="multipart/form-data" class="edit-profile-form" id="editProfileForm">
          
          {# Avatar Selection Section #}
          <div class="avatar-selection-section">
            <h2 class="section-title">Choose Your Avatar</h2>
            <p class="section-description">Select one of our friendly animal avatars for your profile</p>
            
            <div class="avatar-options">
              <label class="avatar-option {% if user_data.avatar == 'elephantavatar.png' %}selected{% endif %}">
                <input type="radio" name="avatar" value="elephantavatar.png" {% if user_data.avatar == 'elephantavatar.png' %}checked{% endif %} required>
                <div class="avatar-image-wrapper">
                  <img src="/themes/custom/storyfulls/images/elephantavatar.png" alt="Elephant Avatar" class="avatar-img">
                  <span class="avatar-label">Elephant</span>
                </div>
              </label>
              
              <label class="avatar-option {% if user_data.avatar == 'tigeravatar.png' %}selected{% endif %}">
                <input type="radio" name="avatar" value="tigeravatar.png" {% if user_data.avatar == 'tigeravatar.png' %}checked{% endif %} required>
                <div class="avatar-image-wrapper">
                  <img src="/themes/custom/storyfulls/images/tigeravatar.png" alt="Tiger Avatar" class="avatar-img">
                  <span class="avatar-label">Tiger</span>
                </div>
              </label>
              
              <label class="avatar-option {% if user_data.avatar == 'rhinoavatar.png' %}selected{% endif %}">
                <input type="radio" name="avatar" value="rhinoavatar.png" {% if user_data.avatar == 'rhinoavatar.png' %}checked{% endif %} required>
                <div class="avatar-image-wrapper">
                  <img src="/themes/custom/storyfulls/images/rhinoavatar.png" alt="Rhino Avatar" class="avatar-img">
                  <span class="avatar-label">Rhino</span>
                </div>
              </label>
            </div>
          </div>

          {# Personal Information Section #}
          <div class="form-section">
            <h2 class="section-title">Personal Information</h2>
            <div class="form-grid">
              
              <div class="form-group">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" id="firstName" name="first_name" value="{{ user_data.first_name }}" class="form-input" required>
              </div>

              <div class="form-group">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" id="lastName" name="last_name" value="{{ user_data.last_name }}" class="form-input" required>
              </div>

              <div class="form-group">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" id="email" name="email" value="{{ user_data.email }}" class="form-input" disabled>
                <p class="field-hint">Email cannot be changed here</p>
              </div>

              <div class="form-group">
                <label for="dateOfBirth" class="form-label">Date of Birth</label>
                <input type="date" id="dateOfBirth" name="date_of_birth" value="{{ user_data.date_of_birth }}" class="form-input">
              </div>

              <div class="form-group">
                <label for="age" class="form-label">Age</label>
                <input type="number" id="age" name="age" value="{{ user_data.age }}" class="form-input" min="1" max="120">
              </div>

              <div class="form-group">
                <label for="gender" class="form-label">Gender</label>
                <select id="gender" name="gender" class="form-input">
                  <option value="">Select Gender</option>
                  <option value="male" {% if user_data.gender == 'male' %}selected{% endif %}>Male</option>
                  <option value="female" {% if user_data.gender == 'female' %}selected{% endif %}>Female</option>
                  <option value="other" {% if user_data.gender == 'other' %}selected{% endif %}>Other</option>
                  <option value="prefer_not_to_say" {% if user_data.gender == 'prefer_not_to_say' %}selected{% endif %}>Prefer not to say</option>
                </select>
              </div>

            </div>
          </div>

          {# Location Section #}
          <div class="form-section">
            <h2 class="section-title">Location</h2>
            <div class="form-grid">
              
              <div class="form-group">
                <label for="city" class="form-label">City</label>
                <input type="text" id="city" name="city" value="{{ user_data.city }}" class="form-input" placeholder="Enter your city">
              </div>

              <div class="form-group">
                <label for="country" class="form-label">Country</label>
                <input type="text" id="country" name="country" value="{{ user_data.country }}" class="form-input" placeholder="Enter your country">
              </div>

            </div>
          </div>

          {# Reading Information Section #}
          <div class="form-section">
            <h2 class="section-title">Reading Journey</h2>
            <div class="form-grid form-grid-single">
              
              <div class="form-group">
                <label for="currentlyReading" class="form-label">Currently Reading</label>
                <input type="text" id="currentlyReading" name="currently_reading" value="{{ user_data.currently_reading }}" class="form-input" placeholder="What book are you reading now?">
              </div>

            </div>
          </div>

          {# About Me Section #}
          <div class="form-section">
            <h2 class="section-title">About You</h2>
            <div class="form-grid form-grid-single">
              
              <div class="form-group">
                <label for="bio" class="form-label">Bio</label>
                <textarea id="bio" name="bio" class="form-textarea" rows="3" placeholder="Tell us a little about yourself...">{{ user_data.bio }}</textarea>
                <p class="field-hint">A short bio that appears on your profile card</p>
              </div>

              <div class="form-group">
                <label for="aboutMe" class="form-label">About Me (Extended)</label>
                <textarea id="aboutMe" name="about_me" class="form-textarea" rows="5" placeholder="Share your reading interests, favourite genres, and what makes you passionate about books...">{{ user_data.about_me }}</textarea>
                <p class="field-hint">Tell your complete story</p>
              </div>

            </div>
          </div>

          {# Form Actions #}
          <div class="form-actions">
            <a href="/user" class="btn btn-cancel">Cancel</a>
            <button type="submit" class="btn btn-save">
              <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
                <path d="M15 5L7 13L3 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Save Changes</span>
            </button>
          </div>

        </form>

      </div>
    </main>
</div>
